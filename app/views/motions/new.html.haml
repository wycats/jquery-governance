%h1 New motion

#new_motion_form
  = form_for @motion do |f|
    .form_row
      = f.label :title
      = f.text_field :title
    .form_row
      = f.label :description
      = f.text_area :description
    .form_row
      = f.label :rationale
      = f.text_area :rationale
    .form_row
      = f.label :expedited, "Expedite Motion"
      = f.check_box :expedited
    .form_row.centered.submit
      = f.submit "Create Motion", :class => 'button large_button'
