-if motion.voting?
  %div#vote_motion
    %div#aye
      =link_to "Aye", motion_vote_path(@motion, :vote => :aye), :method => :post, :remote => true
    %div#nay
      =link_to "Nay", motion_vote_path(@motion, :vote => :nay), :method => :post, :remote => true